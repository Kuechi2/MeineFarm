<Window x:Class="MeineFarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeineFarm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800
        ">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Button Content="Tier erzeugen" HorizontalAlignment="Center" Margin="0,54,0,0" VerticalAlignment="Top" Click="NewAnimal" Grid.Column="1"/>
        <Button Content="Grüsse" HorizontalAlignment="Center" Margin="0,79,0,0" VerticalAlignment="Top" Click="Gruesse" Grid.Column="1" Width="76"/>
        <DataGrid x:Name="TierListe" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,240,0,0" Grid.Column="1"/>
        <Canvas x:Name="Weide">
            <Canvas.Background>
                <ImageBrush ImageSource="/wiese.jpg"/>
            </Canvas.Background>
        </Canvas>
        <Button Grid.Column="1" Content="create" HorizontalAlignment="Center" Margin="0,171,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Grid.Column="1" Content="animate" HorizontalAlignment="Left" Margin="72,197,0,0" VerticalAlignment="Top" Click="Ani"/>

    </Grid>
</Window>
